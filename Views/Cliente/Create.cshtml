@model migration_relacao_atual.Models.Cliente


<h2>Criar Novo Cliente</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarteiraMotoristaId" class="control-label">Número da CNH:</label>
        <select asp-for="CarteiraMotoristaId" class="form-control">
            <option value="">Selecione...</option>
            @foreach (var cnh in ViewBag.CNHs)
            {
                <option value="@cnh.CarteiraMotoristaId">@cnh.CarteiraMotoristaId</option>
            }
        </select>
        <span asp-validation-for="CarteiraMotoristaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>

